  "description": "Editor for normalising second-language learner texts",
  "dependencies": {
    "csstips": "^0.2.2",
    "diff-match-patch": "^1.0.0",
    "json-stringify-pretty-compact": "^1.1.0",
    "ramda": "^0.25.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "reactive-lens": "^0.4.0",
    "typestyle": "^1.4.1"
  },
  "devDependencies": {
    "@types/diff-match-patch": "^1.0.31",
    "@types/enzyme": "^3.1.6",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/puppeteer": "^0.13.9",
    "@types/ramda": "github:types/npm-ramda#dist",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "ava": "^0.24.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "lato-font": "^3.0.0",
    "nyc": "^11.4.1",
    "parcel-bundler": "^1.3.1",
    "parcel-plugin-typescript": "^0.5.2",
    "prettier": "^1.9.2",
    "typescript": "^2.6.1"
  },
  "scripts": {
    "start": "parcel index.html",
    "build": "parcel build index.html",
    "test:watch": "tsc --watch & ava --watch dist/src/*doctest*",
    "test": "tsc && ava dist/test/*js",
    "doctest": "./doctests.sh && tsc",
    "coverage": "tsc && nyc ava dist/test/*js",
    "prettier": "prettier --list-different --write \"{src,test}/**/*.{css,ts{,x}}\""
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "jsxBracketSameLine": true,
    "bracketSpacing": false
  }
}
