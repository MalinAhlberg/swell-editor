{
  "name": "swell-editor",
  "license": "MIT",
  "version": "0.1.0",
  "author": "Dan Ros√©n",
  "description": "Editor for normalising second-language learner texts",
  "dependencies": {
    "csstips": "^0.2.2",
    "diff-match-patch": "^1.0.0",
    "io-ts": "^0.9.8",
    "json-stringify-pretty-compact": "^1.1.0",
    "parser-ts": "^0.4.3",
    "ramda": "^0.25.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "reactive-lens": "^0.4.0",
    "remarkable": "^1.7.1",
    "typestyle": "^1.4.1"
  },
  "devDependencies": {
    "@types/diff-match-patch": "^1.0.31",
    "@types/enzyme": "^3.1.6",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/ramda": "github:types/npm-ramda#dist",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/tape": "^4.2.31",
    "ava": "^0.25.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "faucet": "^0.0.1",
    "lato-font": "^3.0.0",
    "nyc": "^11.4.1",
    "parcel-bundler": "^1.3.1",
    "parcel-plugin-typescript": "^0.5.2",
    "prettier": "^1.9.2",
    "tap-diff": "^0.1.1",
    "tape": "^4.8.0",
    "ts-node": "^4.1.0",
    "typescript": "^2.7.1"
  },
  "scripts": {
    "serve": "parcel index.html",
    "build": "parcel build index.html",
    "test": "tsc && ava dist/test",
    "test:watch": "tsc --watch & ava --watch dist/test",
    "doctest": "typescript-doctest src/*ts* --tape && ts-node node_modules/.bin/tape src/*doctest*.ts | tap-diff",
    "doctest:watch": "typescript-doctest src/*ts* --tape --watch | while read file; do echo tape $file; ts-node $file | tap-diff; done",
    "coverage": "tsc && nyc ava dist/test",
    "prettier": "prettier --list-different --write src/*ts* test/*ts*"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "jsxBracketSameLine": true,
    "bracketSpacing": false
  }
}
