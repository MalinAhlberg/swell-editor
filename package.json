{
  "name": "swell-editor",
  "license": "MIT",
  "version": "0.1.0",
  "author": "Dan Ros√©n",
  "description": "Editor for normalising second-language learner texts",
  "dependencies": {
    "@types/generic-pool": "^3.1.0",
    "csstips": "^0.2.2",
    "dejavu-fonts-ttf": "^2.37.3",
    "diff-match-patch": "^1.0.0",
    "express": "^4.16.2",
    "express-throttle": "^2.0.0",
    "generic-pool": "^3.4.2",
    "json-stringify-pretty-compact": "^1.1.0",
    "parser-ts": "0.5.0",
    "phantom": "^4.0.12",
    "puppeteer": "^1.1.0",
    "ramda": "^0.25.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "reactive-lens": "^0.4.0",
    "remarkable": "^1.7.1",
    "typestyle": "^1.4.1"
  },
  "devDependencies": {
    "@types/diff-match-patch": "^1.0.31",
    "@types/enzyme": "^3.1.6",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/express": "^4.11.1",
    "@types/phantom": "^3.2.4",
    "@types/puppeteer": "^1.0.0",
    "@types/ramda": "github:types/npm-ramda#dist",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/tape": "^4.2.31",
    "doctest-ts": "^0.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "faucet": "^0.0.1",
    "lato-font": "^3.0.0",
    "nyc": "^11.4.1",
    "parcel-bundler": "^1.3.1",
    "parcel-plugin-typescript": "0.6.0",
    "prettier": "^1.9.2",
    "tap-diff": "^0.1.1",
    "tape": "^4.8.0",
    "ts-node": "5.0.0",
    "typescript": "^2.7.1"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "test/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  },
  "scripts": {
    "iosass": "ts-node src/iosass.ts",
    "serve": "parcel $(ts-node src/generate_index.ts ${App:-SpaghettiEditor})",
    "build": "parcel build --public-url ./ $(ts-node src/generate_index.ts ${App:-SpaghettiEditor})",
    "pretest": "yarn run doctest:generate",
    "test": "ts-node node_modules/.bin/tape src/*doctest*.ts test/*.ts | tap-diff",
    "doctest:generate": "doctest-ts src/*ts* --tape",
    "doctest:watch": "yarn run doctest:generate --watch | while read file; do echo running tape on $file; ts-node $file | tap-diff; done",
    "coverage": "nyc yarn run test",
    "prettier": "prettier --list-different --write src/*ts* test/*ts*"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "jsxBracketSameLine": true,
    "bracketSpacing": false
  }
}
